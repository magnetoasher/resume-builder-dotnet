<Window x:Class="ResumeBuilder.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:ResumeBuilder.ViewModels"
        xmlns:conv="clr-namespace:ResumeBuilder.Converters"
        mc:Ignorable="d"
        Title="Resume Builder"
        Icon="Assets/resume_builder.png"
        Height="860"
        Width="1240"
        MinHeight="760"
        MinWidth="980"
        WindowStyle="None"
        ResizeMode="CanResize"
        AllowsTransparency="True"
        Background="Transparent"
        UseLayoutRounding="True"
        SnapsToDevicePixels="True"
        WindowStartupLocation="CenterScreen">
    <Window.DataContext>
        <vm:MainWindowViewModel />
    </Window.DataContext>

    <Window.Resources>
        <conv:StepToVisibilityConverter x:Key="StepToVisibility" />
        <BooleanToVisibilityConverter x:Key="BoolToVisibility" />

        <DropShadowEffect x:Key="CardShadow" BlurRadius="18" ShadowDepth="4" Color="#7A000000" />
        <DropShadowEffect x:Key="PanelShadow" BlurRadius="20" ShadowDepth="8" Color="#88000000" />

        <Style x:Key="SectionTitle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="26" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Margin" Value="0,0,0,12" />
            <Setter Property="Foreground" Value="#F1F6FF" />
        </Style>

        <Style x:Key="MutedText" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource Muted}" />
        </Style>

        <LinearGradientBrush x:Key="CardFrontBackground" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#243B61" Offset="0" />
            <GradientStop Color="#1A2842" Offset="1" />
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="CardBackBackground" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#17363D" Offset="0" />
            <GradientStop Color="#132734" Offset="1" />
        </LinearGradientBrush>

        <SolidColorBrush x:Key="TitleBarBackground" Color="#111A2E" />
        <LinearGradientBrush x:Key="TitleBarAccentLine" StartPoint="0,0" EndPoint="1,0">
            <GradientStop Color="#005A4FCF" Offset="0" />
            <GradientStop Color="#FF5A4FCF" Offset="0.5" />
            <GradientStop Color="#005A4FCF" Offset="1" />
        </LinearGradientBrush>

        <Style x:Key="CardButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="Transparent" SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="TitleBarButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="34" />
            <Setter Property="Height" Value="24" />
            <Setter Property="MinWidth" Value="34" />
            <Setter Property="MinHeight" Value="24" />
            <Setter Property="Margin" Value="6,0,0,0" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Foreground" Value="#E2EEFF" />
            <Setter Property="FontFamily" Value="Segoe MDL2 Assets" />
            <Setter Property="FontSize" Value="9.5" />
            <Setter Property="FontWeight" Value="Normal" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="TitleButtonBorder"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="7">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              RecognizesAccessKey="True" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="TitleButtonBorder" Property="Background" Value="#2F4568" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="TitleButtonBorder" Property="Background" Value="#273A59" />
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="TitleButtonBorder" Property="Opacity" Value="0.45" />
                                <Setter Property="Cursor" Value="Arrow" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="TitleBarCloseButtonStyle" TargetType="Button" BasedOn="{StaticResource TitleBarButtonStyle}">
            <Setter Property="FontSize" Value="10.5" />
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#CC4556" />
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#A83847" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="TitleBarMaximizeButtonStyle" TargetType="Button" BasedOn="{StaticResource TitleBarButtonStyle}">
            <Setter Property="Visibility" Value="Visible" />
            <Style.Triggers>
                <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=WindowState}" Value="Maximized">
                    <Setter Property="Visibility" Value="Collapsed" />
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="TitleBarRestoreButtonStyle" TargetType="Button" BasedOn="{StaticResource TitleBarButtonStyle}">
            <Setter Property="Visibility" Value="Collapsed" />
            <Style.Triggers>
                <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=WindowState}" Value="Maximized">
                    <Setter Property="Visibility" Value="Visible" />
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ScrollThumbStyle" TargetType="Thumb">
            <Setter Property="SnapsToDevicePixels" Value="True" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Thumb">
                        <Border x:Name="ThumbBorder"
                                CornerRadius="6"
                                Background="#6787B8"
                                BorderBrush="#89A6D3"
                                BorderThickness="1"
                                Margin="0,1" />
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ThumbBorder" Property="Background" Value="#7EA2D6" />
                            </Trigger>
                            <Trigger Property="IsDragging" Value="True">
                                <Setter TargetName="ThumbBorder" Property="Background" Value="#9BB8DE" />
                                <Setter TargetName="ThumbBorder" Property="BorderBrush" Value="#BFD0EB" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <ControlTemplate x:Key="VerticalScrollBarTemplate" TargetType="ScrollBar">
            <Grid Width="14" SnapsToDevicePixels="True">
                <Border x:Name="TrackBackground"
                        Margin="3,3,3,3"
                        CornerRadius="7"
                        Background="#1A2A42"
                        BorderBrush="#2D456A"
                        BorderThickness="1" />
                <Track x:Name="PART_Track" IsDirectionReversed="True" Margin="4,4,4,4">
                    <Track.DecreaseRepeatButton>
                        <RepeatButton Command="ScrollBar.PageUpCommand"
                                      Opacity="0"
                                      Focusable="False"
                                      IsTabStop="False" />
                    </Track.DecreaseRepeatButton>
                    <Track.Thumb>
                        <Thumb Style="{StaticResource ScrollThumbStyle}" />
                    </Track.Thumb>
                    <Track.IncreaseRepeatButton>
                        <RepeatButton Command="ScrollBar.PageDownCommand"
                                      Opacity="0"
                                      Focusable="False"
                                      IsTabStop="False" />
                    </Track.IncreaseRepeatButton>
                </Track>
            </Grid>
            <ControlTemplate.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter TargetName="TrackBackground" Property="Background" Value="#223654" />
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>

        <Style TargetType="ScrollBar">
            <Setter Property="Width" Value="14" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Template" Value="{StaticResource VerticalScrollBarTemplate}" />
            <Style.Triggers>
                <Trigger Property="Orientation" Value="Horizontal">
                    <Setter Property="Height" Value="14" />
                </Trigger>
                <Trigger Property="Orientation" Value="Vertical">
                    <Setter Property="Width" Value="14" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="ScrollViewer">
            <Setter Property="CanContentScroll" Value="True" />
            <Setter Property="PanningMode" Value="VerticalOnly" />
        </Style>
    </Window.Resources>

    <Border x:Name="WindowFrame"
            Background="{StaticResource AppBackground}"
            BorderBrush="#31405B"
            BorderThickness="1"
            CornerRadius="12"
            ClipToBounds="True"
            SnapsToDevicePixels="True">
        <Border.Style>
            <Style TargetType="Border">
                <Setter Property="CornerRadius" Value="12" />
                <Setter Property="BorderThickness" Value="1" />
                <Setter Property="Margin" Value="0" />
                <Style.Triggers>
                    <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=WindowState}" Value="Maximized">
                        <Setter Property="CornerRadius" Value="0" />
                        <Setter Property="BorderThickness" Value="0" />
                        <Setter Property="Margin" Value="0" />
                    </DataTrigger>
                </Style.Triggers>
            </Style>
        </Border.Style>
        <Grid>
            <Rectangle Fill="{StaticResource SubtlePattern}" />

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="42" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Border Grid.Row="0"
                        Background="{StaticResource TitleBarBackground}"
                        BorderThickness="0"
                        CornerRadius="12,12,0,0"
                        MouseLeftButtonDown="TitleBar_OnMouseLeftButtonDown">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="2" />
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0" Margin="12,0,12,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <Border Background="#213759" BorderBrush="#5EA0EA" BorderThickness="1" CornerRadius="4" Padding="2" Margin="0,0,8,0">
                                    <Image Source="Assets/resume_builder.png" Width="12" Height="12" />
                                </Border>
                                <TextBlock Text="Resume Builder"
                                           Foreground="#EAF3FF"
                                           FontSize="13"
                                           FontWeight="SemiBold"
                                           VerticalAlignment="Center" />
                            </StackPanel>

                            <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                                <Button Style="{StaticResource TitleBarButtonStyle}"
                                        Content="&#xE921;"
                                        ToolTip="Minimize"
                                        Click="TitleBarMinimize_OnClick" />
                                <Button Style="{StaticResource TitleBarMaximizeButtonStyle}"
                                        Content="&#xE922;"
                                        ToolTip="Maximize"
                                        Click="TitleBarMaximize_OnClick" />
                                <Button Style="{StaticResource TitleBarRestoreButtonStyle}"
                                        Content="&#xE923;"
                                        ToolTip="Restore"
                                        Click="TitleBarRestore_OnClick" />
                                <Button Style="{StaticResource TitleBarCloseButtonStyle}"
                                        Content="&#xE8BB;"
                                        ToolTip="Close"
                                        Click="TitleBarClose_OnClick" />
                            </StackPanel>
                        </Grid>

                        <Border Grid.Row="1" Background="{StaticResource TitleBarAccentLine}" Opacity="1" />
                    </Grid>
                </Border>

                <Grid Grid.Row="1" Margin="24,16,24,24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,14">
                <TextBlock Text="Resume Builder" FontSize="38" FontWeight="Bold" Foreground="#F5F9FF" />
            </StackPanel>

            <!-- Screen 1: Required setup -->
            <Grid Grid.Row="1" Visibility="{Binding Step, Converter={StaticResource StepToVisibility}, ConverterParameter=SelectProfiles}">
                <Grid VerticalAlignment="Center" HorizontalAlignment="Center">
                    <Border Background="{StaticResource Surface}"
                            BorderBrush="{StaticResource BorderBrushNeutral}"
                            BorderThickness="1"
                            CornerRadius="18"
                            Padding="36"
                            Effect="{StaticResource PanelShadow}">
                        <StackPanel Width="620" HorizontalAlignment="Center">
                            <TextBlock Text="OpenAI API key *" FontWeight="SemiBold" Foreground="#E5EEFF" />
                            <PasswordBox x:Name="ApiKeyBoxStart" Margin="0,8,0,4" PasswordChanged="ApiKeyBox_OnPasswordChanged" />
                            <TextBlock Text="Enter a valid OpenAI API key. Invalid keys will be blocked."
                                       TextWrapping="Wrap"
                                       Foreground="{StaticResource Muted}"
                                       Margin="0,0,0,18" />

                            <TextBlock Text="Profiles.json *" FontWeight="SemiBold" Foreground="#E5EEFF" />
                            <Grid Margin="0,8,0,20">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <TextBox Grid.Column="0" Text="{Binding SetupProfilesPath}" IsReadOnly="True" VerticalAlignment="Center" />
                                <Button Grid.Column="1" Content="Browse" Command="{Binding BrowseSetupProfilesCommand}" Margin="12,0,0,0" Style="{StaticResource GhostButton}" />
                            </Grid>
                            <TextBlock Text="Choose the JSON file used to load profiles."
                                       TextWrapping="Wrap"
                                       Foreground="{StaticResource Muted}"
                                       Margin="0,0,0,18" />

                            <Button Content="Validate &amp; Continue"
                                    Command="{Binding ContinueSetupCommand}"
                                    Width="230"
                                    HorizontalAlignment="Center" />
                        </StackPanel>
                    </Border>
                </Grid>
            </Grid>

            <!-- Screen 2: Profiles -->
            <Grid Grid.Row="1" Visibility="{Binding Step, Converter={StaticResource StepToVisibility}, ConverterParameter=SelectProfileCard}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,0,22">
                    <Button Content="Change profiles.json" Command="{Binding ChangeProfilesCommand}" Style="{StaticResource GhostButton}" />
                </StackPanel>

                <StackPanel Grid.Row="1">
                    <TextBlock Text="Choose a profile to continue" Style="{StaticResource SectionTitle}" />
                    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" HorizontalContentAlignment="Center">
                        <ItemsControl ItemsSource="{Binding Profiles}" HorizontalAlignment="Center" MaxWidth="{Binding ProfileDeckMaxWidth}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel HorizontalAlignment="Center"
                                               IsItemsHost="True"
                                               ItemWidth="{Binding DataContext.ProfileCardSlotWidth, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                               ItemHeight="{Binding DataContext.ProfileCardSlotHeight, RelativeSource={RelativeSource AncestorType=ItemsControl}}" />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Button x:Name="CardButtonRoot"
                                            Command="{Binding DataContext.SelectProfileCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                            CommandParameter="{Binding}"
                                            Style="{StaticResource CardButton}"
                                            Width="{Binding DataContext.ProfileCardSlotWidth, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                            Height="{Binding DataContext.ProfileCardSlotHeight, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Padding="0">
                                        <Grid Width="{Binding DataContext.ProfileCardWidth, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                              Height="{Binding DataContext.ProfileCardHeight, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center">
                                            <Grid x:Name="CardBody" RenderTransformOrigin="0.5,0.5">
                                                <Grid.RenderTransform>
                                                    <ScaleTransform x:Name="FlipScale" ScaleX="1" />
                                                </Grid.RenderTransform>
                                                <Border CornerRadius="18"
                                                        Background="{StaticResource Surface}"
                                                        BorderBrush="{StaticResource BorderBrushNeutral}"
                                                        BorderThickness="1"
                                                        Margin="0,2,0,0"
                                                        Effect="{StaticResource PanelShadow}"
                                                        IsHitTestVisible="False" />
                                                <Border x:Name="FrontFace"
                                                        CornerRadius="18"
                                                        Background="{StaticResource CardFrontBackground}"
                                                        BorderBrush="#5E8FD3"
                                                        BorderThickness="1.2"
                                                        ClipToBounds="True">
                                                    <Grid>
                                                        <Border Background="#7FADFF"
                                                                Height="2"
                                                                VerticalAlignment="Top"
                                                                Margin="12,10,12,0"
                                                                CornerRadius="2"
                                                                Opacity="0.42" />
                                                        <TextBlock Text="{Binding DisplayName}"
                                                                   TextWrapping="Wrap"
                                                                   FontSize="{Binding DataContext.ProfileNameFontSize, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                                   FontWeight="SemiBold"
                                                                   Foreground="#EEF5FF"
                                                                   TextAlignment="Center"
                                                                   VerticalAlignment="Center"
                                                                   Margin="18,0" />
                                                    </Grid>
                                                </Border>

                                                <Border x:Name="BackFace"
                                                        CornerRadius="18"
                                                        Background="{StaticResource CardBackBackground}"
                                                        BorderBrush="#3AD2C3"
                                                        BorderThickness="1.2"
                                                        Opacity="0">
                                                    <StackPanel Margin="16" VerticalAlignment="Center">
                                                        <Border Background="#1F4E56" CornerRadius="6" Padding="6,2" HorizontalAlignment="Left" Margin="0,0,0,8">
                                                            <TextBlock Text="PROFILE SUMMARY" Foreground="#A7E8DF" FontSize="11" FontWeight="SemiBold" />
                                                        </Border>
                                                        <TextBlock Text="{Binding DisplayName}" Foreground="#EEF5FF" FontSize="16" FontWeight="SemiBold" TextWrapping="Wrap" />
                                                        <Separator Margin="0,8,0,8" Background="#2F4850" />
                                                        <TextBlock Text="Roles" Foreground="#74D9CC" />
                                                        <TextBlock Text="{Binding RolesCount}" Foreground="#EEF5FF" FontWeight="SemiBold" />
                                                        <TextBlock Text="Education" Foreground="#74D9CC" Margin="0,10,0,0" />
                                                        <TextBlock Text="{Binding EducationCount}" Foreground="#EEF5FF" FontWeight="SemiBold" />
                                                        <TextBlock Text="LinkedIn" Foreground="#74D9CC" Margin="0,10,0,0" />
                                                        <TextBlock Text="{Binding HasLinkedIn}" Foreground="#EEF5FF" FontWeight="SemiBold" />
                                                    </StackPanel>
                                                </Border>
                                            </Grid>
                                        </Grid>
                                    </Button>
                                    <DataTemplate.Triggers>
                                        <Trigger SourceName="CardButtonRoot" Property="IsMouseOver" Value="True">
                                            <Trigger.EnterActions>
                                                <BeginStoryboard>
                                                    <Storyboard>
                                                        <DoubleAnimation Storyboard.TargetName="FlipScale" Storyboard.TargetProperty="ScaleX" To="0.18" Duration="0:0:0.1" />
                                                        <DoubleAnimation Storyboard.TargetName="FrontFace" Storyboard.TargetProperty="Opacity" To="0" Duration="0:0:0.01" BeginTime="0:0:0.1" />
                                                        <DoubleAnimation Storyboard.TargetName="BackFace" Storyboard.TargetProperty="Opacity" To="1" Duration="0:0:0.01" BeginTime="0:0:0.1" />
                                                        <DoubleAnimation Storyboard.TargetName="FlipScale" Storyboard.TargetProperty="ScaleX" From="0.18" To="1" Duration="0:0:0.12" BeginTime="0:0:0.1" />
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </Trigger.EnterActions>
                                            <Trigger.ExitActions>
                                                <BeginStoryboard>
                                                    <Storyboard>
                                                        <DoubleAnimation Storyboard.TargetName="FlipScale" Storyboard.TargetProperty="ScaleX" To="0.18" Duration="0:0:0.1" />
                                                        <DoubleAnimation Storyboard.TargetName="BackFace" Storyboard.TargetProperty="Opacity" To="0" Duration="0:0:0.01" BeginTime="0:0:0.1" />
                                                        <DoubleAnimation Storyboard.TargetName="FrontFace" Storyboard.TargetProperty="Opacity" To="1" Duration="0:0:0.01" BeginTime="0:0:0.1" />
                                                        <DoubleAnimation Storyboard.TargetName="FlipScale" Storyboard.TargetProperty="ScaleX" From="0.18" To="1" Duration="0:0:0.12" BeginTime="0:0:0.1" />
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </Trigger.ExitActions>
                                        </Trigger>
                                    </DataTemplate.Triggers>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </StackPanel>
            </Grid>

            <!-- Screen 3: Main Builder -->
            <Grid Grid.Row="1" Visibility="{Binding Step, Converter={StaticResource StepToVisibility}, ConverterParameter=Builder}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,0,22">
                    <Button Content="Applications" Command="{Binding OpenApplicationsCommand}" Style="{StaticResource GhostButton}" Margin="0,0,12,0" />
                    <Button Content="Import JSON" Command="{Binding ChangeProfilesCommand}" Style="{StaticResource GhostButton}" Margin="0,0,12,0" />
                    <Button Content="Switch profile" Command="{Binding BackToProfilesCommand}" Style="{StaticResource GhostButton}" />
                </StackPanel>

                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="3*" />
                        <ColumnDefinition Width="1.35*" />
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0"
                            Background="{StaticResource Surface}"
                            BorderBrush="{StaticResource BorderBrushNeutral}"
                            BorderThickness="1"
                            CornerRadius="16"
                            Padding="22"
                            Effect="{StaticResource PanelShadow}">
                        <ScrollViewer VerticalScrollBarVisibility="Auto"
                                      HorizontalScrollBarVisibility="Disabled">
                            <StackPanel VerticalAlignment="Top">
                                <TextBlock Text="Build a resume" Style="{StaticResource SectionTitle}" />
                                <TextBlock Text="* Required" Foreground="#9CC1FF" FontSize="12" Margin="0,0,0,10" />

                                <TextBlock Text="Company name *" FontWeight="SemiBold" Foreground="#E5EEFF" />
                                <TextBox Text="{Binding CompanyName, UpdateSourceTrigger=PropertyChanged}" Margin="0,8,0,6" />
                                <TextBlock Text="Enter the target company name exactly as shown in the job post."
                                           TextWrapping="Wrap"
                                           Foreground="{StaticResource Muted}"
                                           Margin="0,0,0,14" />

                                <TextBlock Text="Job URL (optional)" FontWeight="SemiBold" Foreground="#E5EEFF" />
                                <TextBox Text="{Binding JobUrl, UpdateSourceTrigger=PropertyChanged}" Margin="0,8,0,16" />

                                <TextBlock Text="Job description or keywords *" FontWeight="SemiBold" Foreground="#E5EEFF" />
                                <TextBox Text="{Binding JobDescription, UpdateSourceTrigger=PropertyChanged}"
                                         Margin="0,8,0,18"
                                         Height="240"
                                         AcceptsReturn="True"
                                         TextWrapping="Wrap"
                                         VerticalScrollBarVisibility="Auto" />

                                <WrapPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <Button Content="Generate" Command="{Binding GenerateCommand}" Style="{StaticResource AccentAltButton}" MinWidth="176" />
                                </WrapPanel>
                            </StackPanel>
                        </ScrollViewer>
                    </Border>

                    <Border Grid.Column="1"
                            Background="{StaticResource Surface}"
                            BorderBrush="{StaticResource BorderBrushNeutral}"
                            BorderThickness="1"
                            CornerRadius="16"
                            Padding="18"
                            Effect="{StaticResource PanelShadow}"
                            Margin="24,0,0,0">
                        <StackPanel>
                            <TextBlock Text="Selected profile" FontWeight="SemiBold" Foreground="#E5EEFF" />
                            <TextBlock Text="{Binding SelectedProfileName}" FontSize="21" FontWeight="Bold" Margin="0,6,0,14" TextWrapping="Wrap" Foreground="#F6FAFF" />

                            <StackPanel Margin="0,0,0,14">
                                <TextBlock Text="Output directory" FontWeight="SemiBold" Foreground="#E5EEFF" />
                                <TextBlock Text="{Binding OutputDirectory}" TextWrapping="Wrap" Style="{StaticResource MutedText}" />
                                <Button Content="Open folder" Command="{Binding OpenOutputFolderCommand}" Style="{StaticResource GhostButton}" Margin="0,10,0,0" />
                            </StackPanel>

                            <StackPanel>
                                <TextBlock Text="API key status" FontWeight="SemiBold" Foreground="#E5EEFF" />
                                <TextBlock Text="Validated for this session" Style="{StaticResource MutedText}" />
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </Grid>
                </Grid>
            </Grid>

            <!-- Toast -->
            <Border HorizontalAlignment="Center"
                    VerticalAlignment="Bottom"
                    Grid.Row="1"
                    Panel.ZIndex="80"
                    Margin="0,0,0,18"
                    Padding="16,10"
                    CornerRadius="12"
                    Visibility="{Binding IsToastVisible, Converter={StaticResource BoolToVisibility}}"
                    BorderBrush="#3A4E70"
                    BorderThickness="1"
                    MaxWidth="900">
                <Border.Style>
                    <Style TargetType="Border">
                        <Setter Property="Background" Value="#22324A" />
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding ToastKind}" Value="success">
                                <Setter Property="Background" Value="#1D4D42" />
                                <Setter Property="BorderBrush" Value="#2A7A69" />
                            </DataTrigger>
                            <DataTrigger Binding="{Binding ToastKind}" Value="error">
                                <Setter Property="Background" Value="#5A2B2B" />
                                <Setter Property="BorderBrush" Value="#A24A4A" />
                            </DataTrigger>
                            <DataTrigger Binding="{Binding ToastKind}" Value="warning">
                                <Setter Property="Background" Value="#5A4724" />
                                <Setter Property="BorderBrush" Value="#A88333" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
                <TextBlock Text="{Binding ToastMessage}"
                           Foreground="#F6FAFF"
                           FontWeight="SemiBold"
                           TextWrapping="Wrap" />
            </Border>

            <!-- Busy overlay -->
            <Border Grid.Row="1"
                    Panel.ZIndex="90"
                    Background="#A5000000"
                    CornerRadius="0,0,12,12"
                    Visibility="{Binding IsBusy, Converter={StaticResource BoolToVisibility}}">
                <Border.Style>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="0,0,12,12" />
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=WindowState}" Value="Maximized">
                                <Setter Property="CornerRadius" Value="0" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
                <Grid>
                    <Border Background="{StaticResource Surface}"
                            BorderBrush="{StaticResource BorderBrushNeutral}"
                            BorderThickness="1"
                            Padding="24"
                            CornerRadius="16"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center">
                        <StackPanel>
                            <TextBlock Text="{Binding BusyMessage}" FontSize="19" FontWeight="SemiBold" Margin="0,0,0,6" Foreground="#F5F9FF" />
                            <TextBlock Text="Please wait..." Style="{StaticResource MutedText}" />
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>
        </Grid>
    </Grid>
    </Border>
</Window>

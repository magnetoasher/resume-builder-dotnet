<Application x:Class="ResumeBuilder.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="MainWindow.xaml">
  <Application.Resources>
    <ResourceDictionary>
      <Color x:Key="InkColor">#EAF0FC</Color>
      <Color x:Key="PaperColor">#121722</Color>
      <Color x:Key="SurfaceColor">#1A2130</Color>
      <Color x:Key="SurfaceRaisedColor">#232D42</Color>
      <Color x:Key="BorderColor">#33415E</Color>
      <Color x:Key="AccentColor">#4E8CFF</Color>
      <Color x:Key="AccentHoverColor">#67A0FF</Color>
      <Color x:Key="AccentPressedColor">#3E79EC</Color>
      <Color x:Key="AccentAltColor">#00BFA6</Color>
      <Color x:Key="AccentAltHoverColor">#1BD4BC</Color>
      <Color x:Key="AccentAltPressedColor">#00A48E</Color>
      <Color x:Key="MutedColor">#94A2BC</Color>

      <SolidColorBrush x:Key="Ink" Color="{StaticResource InkColor}" />
      <SolidColorBrush x:Key="Paper" Color="{StaticResource PaperColor}" />
      <SolidColorBrush x:Key="Surface" Color="{StaticResource SurfaceColor}" />
      <SolidColorBrush x:Key="SurfaceRaised" Color="{StaticResource SurfaceRaisedColor}" />
      <SolidColorBrush x:Key="BorderBrushNeutral" Color="{StaticResource BorderColor}" />
      <SolidColorBrush x:Key="Accent" Color="{StaticResource AccentColor}" />
      <SolidColorBrush x:Key="AccentAlt" Color="{StaticResource AccentAltColor}" />
      <SolidColorBrush x:Key="Muted" Color="{StaticResource MutedColor}" />

      <LinearGradientBrush x:Key="AppBackground" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#0D121C" Offset="0" />
        <GradientStop Color="#111A28" Offset="0.55" />
        <GradientStop Color="#141F2D" Offset="1" />
      </LinearGradientBrush>

      <DrawingBrush x:Key="SubtlePattern" TileMode="Tile" Viewport="0,0,52,52" ViewportUnits="Absolute" Viewbox="0,0,52,52" ViewboxUnits="Absolute" Opacity="0.3">
        <DrawingBrush.Drawing>
          <DrawingGroup>
            <GeometryDrawing Brush="#1F2A3C">
              <GeometryDrawing.Geometry>
                <EllipseGeometry Center="7,7" RadiusX="1.1" RadiusY="1.1" />
              </GeometryDrawing.Geometry>
            </GeometryDrawing>
            <GeometryDrawing Brush="#1F2A3C">
              <GeometryDrawing.Geometry>
                <EllipseGeometry Center="29,17" RadiusX="0.9" RadiusY="0.9" />
              </GeometryDrawing.Geometry>
            </GeometryDrawing>
            <GeometryDrawing Brush="#1F2A3C">
              <GeometryDrawing.Geometry>
                <EllipseGeometry Center="17,35" RadiusX="1" RadiusY="1" />
              </GeometryDrawing.Geometry>
            </GeometryDrawing>
          </DrawingGroup>
        </DrawingBrush.Drawing>
      </DrawingBrush>

      <Style TargetType="Window">
        <Setter Property="FontFamily" Value="Bahnschrift, Segoe UI" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="Foreground" Value="{StaticResource Ink}" />
      </Style>

      <Style TargetType="TextBox">
        <Setter Property="Foreground" Value="{StaticResource Ink}" />
        <Setter Property="CaretBrush" Value="{StaticResource Ink}" />
        <Setter Property="Padding" Value="12,8" />
        <Setter Property="Background" Value="{StaticResource SurfaceRaised}" />
        <Setter Property="BorderBrush" Value="{StaticResource BorderBrushNeutral}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="SelectionBrush" Value="#665FA3FF" />
        <Setter Property="MinHeight" Value="40" />
        <Style.Triggers>
          <Trigger Property="IsKeyboardFocused" Value="True">
            <Setter Property="BorderBrush" Value="{StaticResource Accent}" />
          </Trigger>
          <Trigger Property="IsReadOnly" Value="True">
            <Setter Property="Opacity" Value="0.92" />
          </Trigger>
        </Style.Triggers>
      </Style>

      <Style TargetType="PasswordBox">
        <Setter Property="Foreground" Value="{StaticResource Ink}" />
        <Setter Property="Padding" Value="12,8" />
        <Setter Property="Background" Value="{StaticResource SurfaceRaised}" />
        <Setter Property="BorderBrush" Value="{StaticResource BorderBrushNeutral}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="MinHeight" Value="40" />
        <Style.Triggers>
          <Trigger Property="IsKeyboardFocusWithin" Value="True">
            <Setter Property="BorderBrush" Value="{StaticResource Accent}" />
          </Trigger>
        </Style.Triggers>
      </Style>

      <Style TargetType="Button">
        <Setter Property="Foreground" Value="#F7FBFF" />
        <Setter Property="Background" Value="{StaticResource Accent}" />
        <Setter Property="BorderBrush" Value="#80ABFF" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="Padding" Value="20,10" />
        <Setter Property="MinHeight" Value="42" />
        <Setter Property="MinWidth" Value="120" />
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="Template">
          <Setter.Value>
            <ControlTemplate TargetType="Button">
              <Border x:Name="ButtonBorder"
                      Background="{TemplateBinding Background}"
                      BorderBrush="{TemplateBinding BorderBrush}"
                      BorderThickness="{TemplateBinding BorderThickness}"
                      CornerRadius="12"
                      SnapsToDevicePixels="True">
                <ContentPresenter Margin="{TemplateBinding Padding}"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center"
                                  RecognizesAccessKey="True" />
              </Border>
              <ControlTemplate.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                  <Setter TargetName="ButtonBorder" Property="Background" Value="#67A0FF" />
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                  <Setter TargetName="ButtonBorder" Property="Background" Value="#3E79EC" />
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                  <Setter TargetName="ButtonBorder" Property="Opacity" Value="0.42" />
                  <Setter Property="Cursor" Value="Arrow" />
                </Trigger>
              </ControlTemplate.Triggers>
            </ControlTemplate>
          </Setter.Value>
        </Setter>
      </Style>

      <Style x:Key="GhostButton" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
        <Setter Property="Foreground" Value="{StaticResource Ink}" />
        <Setter Property="Background" Value="{StaticResource SurfaceRaised}" />
        <Setter Property="BorderBrush" Value="{StaticResource BorderBrushNeutral}" />
        <Setter Property="Template">
          <Setter.Value>
            <ControlTemplate TargetType="Button">
              <Border x:Name="ButtonBorder"
                      Background="{TemplateBinding Background}"
                      BorderBrush="{TemplateBinding BorderBrush}"
                      BorderThickness="{TemplateBinding BorderThickness}"
                      CornerRadius="12"
                      SnapsToDevicePixels="True">
                <ContentPresenter Margin="{TemplateBinding Padding}"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center"
                                  RecognizesAccessKey="True" />
              </Border>
              <ControlTemplate.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                  <Setter TargetName="ButtonBorder" Property="Background" Value="#2D3952" />
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                  <Setter TargetName="ButtonBorder" Property="Background" Value="#253048" />
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                  <Setter TargetName="ButtonBorder" Property="Opacity" Value="0.42" />
                  <Setter Property="Cursor" Value="Arrow" />
                </Trigger>
              </ControlTemplate.Triggers>
            </ControlTemplate>
          </Setter.Value>
        </Setter>
      </Style>

      <Style x:Key="AccentAltButton" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
        <Setter Property="Background" Value="{StaticResource AccentAlt}" />
        <Setter Property="BorderBrush" Value="#58E2CF" />
        <Setter Property="Template">
          <Setter.Value>
            <ControlTemplate TargetType="Button">
              <Border x:Name="ButtonBorder"
                      Background="{TemplateBinding Background}"
                      BorderBrush="{TemplateBinding BorderBrush}"
                      BorderThickness="{TemplateBinding BorderThickness}"
                      CornerRadius="12"
                      SnapsToDevicePixels="True">
                <ContentPresenter Margin="{TemplateBinding Padding}"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center"
                                  RecognizesAccessKey="True" />
              </Border>
              <ControlTemplate.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                  <Setter TargetName="ButtonBorder" Property="Background" Value="#1BD4BC" />
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                  <Setter TargetName="ButtonBorder" Property="Background" Value="#00A48E" />
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                  <Setter TargetName="ButtonBorder" Property="Opacity" Value="0.42" />
                  <Setter Property="Cursor" Value="Arrow" />
                </Trigger>
              </ControlTemplate.Triggers>
            </ControlTemplate>
          </Setter.Value>
        </Setter>
      </Style>
    </ResourceDictionary>
  </Application.Resources>
</Application>
